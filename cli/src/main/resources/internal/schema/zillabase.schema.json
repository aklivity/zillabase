{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Zillabase Config Schema",
  "type": "object",
  "properties":
  {
    "admin":
    {
      "type": "object",
      "properties":
      {
        "port":
        {
          "type": "integer"
        },
        "configServerUrl":
        {
          "type": "string"
        },
        "tag":
        {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "sso":
    {
      "type": "object",
      "properties":
      {
        "tag":
        {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "kafka":
    {
      "type": "object",
      "properties":
      {
        "bootstrapUrl":
        {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required":
      [
        "bootstrapUrl"
      ]
    },
    "registry":
    {
      "type": "object",
      "properties":
      {
        "apicurio":
        {
          "type": "object",
          "properties":
          {
            "url":
            {
              "type": "string"
            },
            "groupId":
            {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required":
          [
            "url"
          ]
        },
        "karapace":
        {
          "type": "object",
          "properties":
          {
            "url":
            {
              "type": "string"
            },
            "context":
            {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required":
          [
            "url"
          ]
        }
      },
      "additionalProperties": false
    },
    "risingwave":
    {
      "type": "object",
      "properties":
      {
        "url":
        {
          "type": "string"
        },
        "db":
        {
          "type": "string"
        }
      },
      "required":
      [
        "url"
      ]
    },
    "zilla":
    {
      "type": "object",
      "properties":
      {
        "ports":
        {
          "type": "array",
          "items":
          {
            "type": "object",
            "properties":
            {
              "port":
              {
                "type": "integer"
              },
              "label":
              {
                "type": "string"
              }
            },
            "required":
            [
              "port",
              "label"
            ]
          },
          "minItems": 1
        },
        "env":
        {
            "type": "array",
            "items":
            {
              "type": "string"
            }
        },
        "tag":
        {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "keycloak":
    {
      "type": "object",
      "properties":
      {
        "realm":
        {
          "type": "string"
        },
        "client":
        {
          "type": "object",
          "properties":
          {
            "client-id":
            {
              "type": "string"
            },
            "secret":
            {
              "type": "string"
            },
            "root":
            {
              "type": "string"
            },
            "redirects":
            {
              "type": "array",
              "items":
              {
                "type": "string"
              }
            },
            "origins":
            {
              "type": "array",
              "items":
              {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "required":
          [
            "client-id",
            "redirects"
          ]
        }
      },
      "additionalProperties": false,
      "required":
      [
        "realm"
      ]
    }
  },
  "additionalProperties": false
}
